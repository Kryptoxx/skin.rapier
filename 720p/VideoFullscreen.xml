<window id="2005">
	<defaultcontrol>-</defaultcontrol>

	<controls>
		<control type="group">
			<visible>!Window.IsActive(FullscreenInfo)</visible>
			<include>FSMediaInfoPanel</include>
			<include>FSMediaInfoOpenCloseAnim</include>
			
			<control type="grouplist">
				<posx>55</posx>
				<posy>10</posy>
				<itemgap>35</itemgap>
				<control type="label" id="10">
					<description>Row 1</description>
					<width>1170</width>
					<font>DialogHeadFont</font>
					<textcolor>GreyColor2</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
				</control>
				<control type="label" id="11">
					<description>Row 2</description>
					<width>1170</width>
					<font>DialogHeadFont</font>
					<textcolor>GreyColor2</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
				</control>
				<control type="label" id="12">
					<description>Row 3</description>
					<width>1170</width>
					<font>DialogHeadFont</font>
					<textcolor>GreyColor2</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
				</control>
			</control>
		</control>

		<control type="group" id="1">
			<visible>VideoPlayer.Content(LiveTV) + [Player.ShowInfo + Window.IsActive(FullScreenVideo)] + ![Window.IsVisible(VideoOSD) | Window.IsVisible(FullscreenInfo) | Window.IsVisible(123) | Window.IsVisible(124) | Window.IsVisible(125) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(PVROSDGuide)]</visible>
			<include>FSMediaInfoPanel</include>
			<include>FSMediaInfoOpenCloseAnim</include>

			<control type="grouplist" id="1">
				<posx>875</posx>
				<posy>0</posy>
				<height>43</height>
				<width>350</width>
				<usecontrolcoords>true</usecontrolcoords>
				<orientation>horizontal</orientation>
				<align>right</align>
				<control type="image" id="1">
					<description>Media Scanning</description>
					<posy>2</posy>
					<width>43</width>
					<height>43</height>	
					<texture>gui/notification-downloading.png</texture>
					<bordersize>4</bordersize>
					<aspectratio>keep</aspectratio>
					<visible>Window.IsActive(VideoScan) | Window.IsActive(MusicScan)</visible>
					<include>NotificationPulseAnim</include>
				</control>
				<control type="label" id="1">
					<posx>-4</posx>
					<posy>22</posy>
					<width min="25" max="250">auto</width>
					<font>FSInfoTitleFont</font>
					<textcolor>BreadCrumbColor</textcolor>
					<label>$INFO[System.Time]</label>
					<aligny>center</aligny>
				</control>
			</control>

			<control type="image" id="1">
				<description>Cover</description>
				<posx>55</posx>
				<posy>11</posy>
				<width>185</width>
				<height>104</height>
				<texture diffuse="covers/player-tv-cover-border.png">$INFO[VideoPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
			</control>

			<control type="group" id="1">			
				<posx>260</posx>

				<control type="grouplist" id="1">
					<posy>5</posy>
					<width>781</width>
					<height>50</height>
					<itemgap>5</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<control type="label" id="1">
						<description>Title</description>
						<width min="50" max="671">auto</width>
						<height>50</height>
						<font>FSInfoTitleFont</font>
						<textcolor>MediaInfoTitleColor</textcolor>
						<label>[UPPERCASE]$INFO[VideoPlayer.Title][/UPPERCASE]</label>
						<scroll>yes</scroll>
					</control>
				</control>

				<control type="label" id="1">
					<description>Channel Name</description>
					<posy>35</posy>
					<width>781</width>
					<font>FSInfoFont</font>
					<textcolor>MediaInfoTitleColor2</textcolor>
					<label>[UPPERCASE]$INFO[VideoPlayer.ChannelName][/UPPERCASE]</label>
				</control>

				<control type="grouplist" id="1">
					<description>Media Flags Area</description>
					<posy>72</posy>
					<width>781</width>
					<height>41</height>
					<itemgap>5</itemgap>
					<align>left</align>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<include>MediaFlagFadeAnim</include>
					<include condition="!Skin.HasSetting(UseAltMediaFlagTheme)">PlayerVideoMediaFlags</include>
					<include condition="Skin.HasSetting(UseAltMediaFlagTheme)">PlayerVideoAltMediaFlags</include>
					<include condition="!Skin.HasSetting(UseAltMediaFlagTheme)">PlayerAudioMediaFlags</include>
					<include condition="Skin.HasSetting(UseAltMediaFlagTheme)">PlayerAudioAltMediaFlags</include>
					<include condition="!Skin.HasSetting(UseAltMediaFlagTheme)">PlayerRatingMediaFlags</include>
					<include condition="Skin.HasSetting(UseAltMediaFlagTheme)">PlayerRatingAltMediaFlags</include>
				</control>
			</control>
		</control>
	</controls>
</window>